model Stream {
    id String @id @default(cuid())

    userId String
    User   User   @relation("AdminEvents", fields: [userId], references: [id])

    title        String
    description  String?
    thumbnailUrl String?

    isLive        Boolean @default(false)
    isChatEnabled Boolean @default(true)
    isChatDelayed Boolean @default(false)

    datetime            DateTime
    invitedPrivateUsers String[]
    fireReminderEmailAt DateTime?

    Leads Leads[] @relation("EmailLeadsEvents")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])

	// private 		Boolean @default(false)
	// invitedTeams 	Team[]
}

model Leads {
    email String @id @default(cuid())

    Events   Stream[] @relation("EmailLeadsEvents")
    eventsId String?

    @@index([eventsId])
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? //@db.Text
    access_token      String? //@db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? //@db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
    @@index([userId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    bio           String?
    image         String?
	teams 	   	  Team[] 
    accounts      Account[]
    sessions      Session[]

    AdministeredEvents Stream[] @relation("AdminEvents")
    eventsId           String?

    //LiveKit
    ingressId String? @unique
    serverUrl String? //@db.Text
    streamKey String? //@db.Text
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Team {
	id 				String @id @default(cuid()) 
	name 			String @unique
	usersEmails 	String[] 

	userId 			String
	user 			User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
